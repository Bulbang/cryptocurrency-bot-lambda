{
    "name": "cryptocurrency-bot",
    "version": "1.0.0",
    "description": "Cryptocurrency telegram bot",
    "main": "./dist/index.js",
    "repository": "https://github.com/Bulbang/cryptocurrency-bot-lambda.git",
    "license": "MIT",
    "scripts": {
        "format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
        "lint": "eslint --max-warnings=0 src && prettier --check '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
        "dev": "nodemon ./src/index.ts",
        "start": "node ./dist/index.js",
        "build": "esbuild --bundle --sourcemap --outdir=dist --format=esm --platform=node --target=node14 ./src/index.ts"
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "typescript",
            "prettier"
        ]
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^16.11.6",
        "@typescript-eslint/eslint-plugin": "^5.2.0",
        "@typescript-eslint/parser": "^5.2.0",
        "esbuild": "^0.14.26",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-config-typescript": "^3.0.0",
        "prettier": "^2.3.0",
        "nodemon": "^2.0.14",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "axios": "^0.24.0",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "mongodb": "^4.1.3",
        "ngrok": "^4.3.1"
    }
}
